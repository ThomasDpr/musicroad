<div class="card-signup">
  <h2>S'inscrire</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">


    <div data-controller="upload-avatar", class="upload-avatar">
        <%= f.input :photo, as: :file, label: false, input_html: { id: "photo", class: "hidden-avatar", data: { target: "upload-avatar.input" } } %>
        <label for="photo" class="upload-button">
          <span data-upload-avatar-target="preview" class="avatar-preview">
            <span class="camera-icon"><i class="fa-solid fa-camera"></i></span>
          </span>
        </label>
      </div>
      <div class="name-inputs">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "first_name", class: "form-control", placeholder: "Prénom" } %>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "last_name", class: "form-control", placeholder: "Nom" } %>
      </div>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
      <%= f.input :password,
                  required: true,
                  label: false,
                  # hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Mot de passe (6 caractères minimum)" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Mot de passe (confirmation)" } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Inscription", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
