
<div class="card-login">
  <h2>Se connecter</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Mot de passe" } %>
      <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connexion", class: "btn-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
