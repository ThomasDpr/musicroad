
<%= simple_form_for :festival_filter, url: festivals_path, method: :get, data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :start_time, as: :hidden %>
  <%= f.input :end_time, as: :hidden %>
  <input type="text" data-target="flatpickr">
  <%= f.submit 'Filter festivals' %>
<% end %>




<div class="card-festivals">
  <% @festivals.each do |festival| %>
    <div class="card-festival">
      <%= link_to festival_path(festival) do %>
        <div class="card-festival-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path festival.photo.key %>')">
          <button class="heart-icon">
            <% if !user_signed_in? || Favorite.find_by(user: current_user, festival: festival).nil? %>
              <%= svg_tag "icons/heart" %>
            <% else %>
              <%= svg_tag "icons/heart", class: "liked" %>
            <% end %>
          </button>
          <div class="card-festival-title">
            <h2><%= festival.name.upcase %></h2>
          </div>
        </div>
        <div class="card-festival-content">
          <div class="card-festival-bottom">
            <div class="card-festival-location">
              <p><%= festival.location %></p>
            </div>
            <div class="card-festival-date">
              <p><%= festival.start_date.strftime("%d/%m/%Y") %> - <%= festival.end_date.strftime("%d/%m/%Y") %></p>
            </div>
            <div class="card-festival-inputs">
              <button class="shared-icon">
                <%= svg_tag "icons/share" %>
              </button>
              <button class="ticket-icon">
                <%= svg_tag "icons/ticket" %>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
