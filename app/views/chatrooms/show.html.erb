<div class="container chatroom"
  data-controller="chatroom-subscription"
  data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>"
  data-chatroom-subscription-current-user-id-value="<%= current_user.id %>">
  <div class="chatroom">
    <h1>Chat</h1>
    <div class="chat-box-general">
      <div class="container-chatroom">
        <div class="chatroom-title">
          <h1><%= @chatroom.festival.name %></h1>
        </div>
        <% @chatrooms.each do |chatroom| %>
          <%= link_to chatroom_path(chatroom) do %>
            <div class="chatrooms-city">
              <h2><%= chatroom.city.name %></h2>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="messages" data-chatroom-subscription-target="messages">
        <h2><%= @chatroom.city.name %></h2>
        <% @chatroom.messages.each do |message| %>
          <div class="<%= message.sender?(current_user) ? 'message-row-right' : 'message-row-left' %>">
            <div class="<%= message.sender?(current_user) ? 'sender-style' : 'receiver-style' %>">
              <%= render "messages/message", message: message %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="chat-box">
        <%= simple_form_for [@chatroom, @message],
           html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" } } do |f|%>
          <%= f.input :content,
                label: false,
                placeholder: "Ecrire un message..." %>
          <%= f.submit "Envoyer" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
